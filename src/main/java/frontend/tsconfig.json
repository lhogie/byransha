{
	"compilerOptions": {
		"target": "ESNext",
		"module": "Preserve",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"verbatimModuleSyntax": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@components/*": ["./src/components/*"],
			"@assets/*": ["./src/assets/*"],
			"@global/*": ["./src/global/*"]
		},
		"allowSyntheticDefaultImports": true
	},
	"exclude": ["dist", "node_modules"]
}
